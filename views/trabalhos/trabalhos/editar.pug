                                        input#inputName.form-control(type='text', name="cargo", placeholder='Titulo do Artigo', value=job.body.cargo)
                                    .form-group
                                        label(for='location') Localização do trabalho
                                        input#input5Name.form-control(type='text', name="location", placeholder='Localização do Trabalho', value= job.location)
                                    .form-group
                                        label(for='body.responsabilidades') Responsabilidades
                                        textarea#example4FormControlTextarea1.form-control(rows='3', name="responsabilidades", placeholder='Insira as responsabilidades')=job.body.responsabilidades

                                    .form-group
                                        label(for='body.requisitos') Requisitos
                                        textarea#example3FormControlTextarea1.form-control(rows='3', name="requisitos", placeholder='Insira os requisitos')=job.body.requisitos
                                    .form-group
                                        label(for='body.beneficios') Benefícios
                                        textarea#example2FormControlTextarea1.form-control(rows='3', name="beneficios", placeholder='Insira os benefícios')=job.body.beneficios
                                        -var datex = job.expirationDate;
                                        -var month = (datex.getMonth() + 1)
                                        -var day = datex.getDate()
                                        if(month < 10)
                                            -month = "0" + month
                                        if(day < 10)
                                            -day = "0" + day
                                        -var getExp = datex.getFullYear() + '-' + month + '-' + day
                                    .form-group
                                        label(for="expirationDate") Data de expiração
                                        input#fordskate.form-control(name="expirationDate",  type='date' , value=getExp)


                                    .form-group
                                        label(for='vagas') Vagas
                                        input#input3Name.form-control(type='text', name="vagas", placeholder='Vagas', value=job.body.vagas)
                                    .form-group
                                        label(for='body.oferta') Oferta
                                        input#input2Name.form-control(type='text', name="oferta", placeholder='Oferta', value=job.body.oferta)


                                    script(src='/js/bootstrap-combobox.js')
                                    script.
                                        $(document).ready(function () {
                                            $('.combobox').combobox()
                                        });
