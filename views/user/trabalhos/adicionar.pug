extends ../../c/layout

block content
    .content-wrapper
        .content
            .row
                .col-md-12
                    h2.text-center.mb-5 Adicionar oferta
                    .row
                        .col-md-9.mx-auto
                            .card.border-secondary
                                .card-header
                                    h3.mb-0.my-2 Detalhes da oferta
                                .card-body
                                    form.form(role='form', autocomplete='off', method="post", action="/trabalho/adicionar")
