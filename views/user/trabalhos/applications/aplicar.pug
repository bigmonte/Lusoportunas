extends ../../../layout

block content
    .container.py-5
        .row
            .col-md-12
                h2.text-center.mb-1
                .row
                    .col-md-9.mx-auto
                        .card.border-secondary
                            .card-header
                                h3.mb-0.my-2 Concorrer a este trabalho
                            .card-body
                                form.form(role='form', autocomplete='off', method="post")
                                    .form-group
                                        label(for='message') Mensagem
                                        input#inputName.form-control(type='text', name="message", value="")
                                    .form-group
                                        button.btn.btn-success.btn-lg.float-right(type='submit') Guardar