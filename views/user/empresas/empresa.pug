extends ../../c/layout

block content
    .container-fluid
        .row
            .col-md-4
                .row
                    .card.profile-card-1
                        img.background(src='https://i07.fotocdn.net/s24/24/gallery_s/302/2608934167.jpg', alt='Imagem de Empresa')
                        if(user.company[0].logo)
                                img.profile.img-circle(src=user.company[0].logo, alt='Imagem de Empresa')
                        else
                            img.profile.img-circle(src="http://cdn.onlinewebfonts.com/svg/img_570489.png", alt='Imagem de Empresa')
                        .card-content
                            h3=user.company[0].name
                            h4=user.company[0].location

            .col-md.py-3
                .card.border
                    .card-header
                        if(user.company[0].description)
                            Strong.label(hi="jsj") Descrição:
                            h6.col-md-9.mx-auto= user.company[0].description
                        if(user.company[0].mission)
                            hr
                            Strong.label(jhs="jsj") Missão:
                            h6.col-md-9.mx-auto= user.company[0].mission
                        if(user.company[0].objectives)
                            hr
                            Strong.label(sk="jsj") Objetivos:
                            h6.col-md-9.mx-auto= user.company[0].objectives
                        if(!user.company[0].objectives && !user.company[0].objectives && !user.company[0].objectives)
                            Strong.label(sk="jsj") Lamentamos, mas esta Empresa ainda não acrescentou informação adicional.


        include ../../footer