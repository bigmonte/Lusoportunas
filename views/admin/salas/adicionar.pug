extends ../../layout

block content
    h1 Criar sala de chat

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", placeholder="Insira o nome")
            small.text-muted Dê um nome à sua sala de chat
        button.btn.btn-primary(type="submit") Criar sala
        a.btn.btn-default(href="/admin/salas") Cancelar