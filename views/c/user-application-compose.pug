extends ./layout
block content
    .content-wrapper
        .content
            .row
                .col-lg-3
                    .box.box-solid
                        .box-header.with-border
                            h3.box-title
                            .box-tools
                                button.btn.btn-box-tool(type='button', data-widget='collapse')
                                    i.fa.fa-minus
                        .box-body.no-padding
                            ul.nav.nav-pills.nav-stacked
                                li.active
                                    a(href='/minhasCandidaturas/'+ruser._id)
                                        i.fa.fa-inbox
                                        |  Candidaturas
                                        //span.label.label-primary.pull-right 12
                .col-lg-9
                    form.form(role='form', autocomplete='off', method="post")
                        .box.box-primary
                            .box-header.with-border
                                h3.box-title Candidatar-se a emprego
                            // /.box-header
                            .box-body.pad-10
                                .form-group
                                    input#disabledInput.form-control(disabled='', type='text', placeholder=job.ruser.name.firstName + " " + job.ruser.name.lastName + " (" + job.company + ")")
                                .form-group
                                    input#disabledInput.form-control(disabled='', type='text', placeholder="Candidatura a " + job.jobFunction + " " + " | " + job.jobType)
                                .form-group
                                    textarea#compose-textarea.form-control(style='height: 300px', name="message")
                                h6
                                    if(ruser.curriculum)
                                        i.fa.fa-paperclip=" Já tem curriculo. O seu currículo será enviado automáticamente. Poderá atualiza-lo aqui."
                                    else
                                        i.fa.fa-paperclip=" Insira o seu currículo aqui"
                                form.dropzone(action='#')
                                    .fallback
                                        input(name='curriculum', type='file', multiple='')
                            // /.box-body
                            .box-footer.m-b-2
                                .pull-right
                                    button.btn.btn-primary(type='submit')
                                        i.fa.fa-envelope-o
                                        |  Enviar
                                button.btn.btn-default(type='reset')
                                    i.fa.fa-times
                                    |  Cancelar
        include foote
    script(src='/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='dist/js/luso.js')
    script(src='dist/plugins/iCheck/icheck.min.js')
    script(src='dist/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js')
    script(src='dist/plugins/dropzone-master/dropzone.js')
    script.
        $(function () {
            $("#compose-textarea").wysihtml5();
        });
    script(src='dist/plugins/hmenu/ace-responsive-menu.js', type='text/javascript')
    script(type='text/javascript').
        $(document).ready(function () {
            $("#respMenu").aceResponsiveMenu({
                resizeWidth: '768', // Set the same in Media query
                animationSpeed: 'fast', //slow, medium, fast
                accoridonExpAll: false //Expands all the accordion menu on click
            });
        });
