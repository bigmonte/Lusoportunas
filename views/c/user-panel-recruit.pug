extends ./layout
block content
    .content-wrapper
        .content
            .row
                .col-lg-4
                    div
                        .box.box-widget.widget-user-2
                            .widget-user-header.bg-light-blue-gradient
                                .widget-user-image
                                    img.img-circle(src=ruser.profilePicture, alt='Foto de Perfil')
                                h3.widget-user-username=ruser.name.firstName + " " + ruser.name.lastName
                                h5.widget-user-desc Lead Developer
                            .box-footer.no-padding
                                ul.nav.nav-stacked
                                    li
                                        -let getNow=new Date()
                                        -let count=0
                                            each i in jobs
                                                if(i.expirationDate > getNow)
                                                    -count++
                                        a(href='/meusTrabalhos')="Ofertas de Trabalhos activas"
                                            span.pull-right.badge.bg-blue=count
                                    li
                                        a(href='/trabalhosExpirados')
                                            | Ofertas de Trabalhos expiradas
                                            span.pull-right.badge.bg-blue=jobs.length-count
                                    li
                                        a(href='/minhasEmpresas')
                                            | Empresas
                                            span.pull-right.badge.bg-aqua=ruser.company.length
                .col-lg-8
                    .info-box
                        h4.text-black Painel
                        p Gestor de ofertas de trabalho
                        .table-responsive
                            table#example1.table.table-bordered.table-striped
                                thead
                                    tr
                                        th(scope="col")
                                            th(scope="col")
                                            th(scope="col") Cargo
                                            th(scope="col") Função
                                            th(scope="col") Local
                                            th(scope="col") Criado em
                                            th(scope="col") Expira em
                                            th(scope="col") Aplicações
                                tbody
                                    each job in jobs
                                        -let getNow = new Date()
                                        -let getMonth=job.expirationDate.getMonth()+1
                                        -let getDateMonth = job.date.getMonth()+1;
                                            if(job.expirationDate > getNow)
                                                tr
                                                    td(style="width: 50px;"): a(href="/trabalho/eliminar/" + job._id)
                                                        span.fa.fa-remove
                                                    td(style="width: 50px;"): a(href="/trabalho/editar/" + job._id)
                                                        span.fa.fa-pencil
                                                    td: a(href="/trabalho/" + job._id)= job.body.cargo
                                                    td= job.jobFunction
                                                    td= job.location
                                                    td= job.date.getDate() + "/" + getDateMonth + "/" + job.date.getUTCFullYear()
                                                    td= job.expirationDate.getDate() + "/" + getMonth + "/" + job.expirationDate.getUTCFullYear()
                                                    td: a(href="applications/" + job._id)= job.application.length
            include  ./foote
        script(src='/jquery.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='dist/js/luso.js')
        script(src='dist/plugins/datatables/jquery.dataTables.min.js')
        script(src='dist/plugins/datatables/dataTables.bootstrap.min.js')
        script.
            $(function () {
                $('#example1').DataTable()
                $('#example2').DataTable({
                    'paging': true,
                    'lengthChange': false,
                    'searching': false,
                    'ordering': true,
                    'info': true,
                    'autoWidth': false
                })
            })
        script(src='dist/plugins/table-expo/filesaver.min.js')
        script(src='dist/plugins/table-expo/xls.core.min.js')
        script(src='dist/plugins/table-expo/tableexport.js')
        script.
            $("table").tableExport({formats: ["xlsx", "xls", "csv", "txt"],});
        script(src='dist/plugins/hmenu/ace-responsive-menu.js', type='text/javascript')
        // Plugin Initialization
        script(type='text/javascript').
            $(document).ready(function () {
                $("#respMenu").aceResponsiveMenu({
                    resizeWidth: '768', // Set the same in Media query
                    animationSpeed: 'fast', //slow, medium, fast
                    accoridonExpAll: false //Expands all the accordion menu on click
                });
            });

